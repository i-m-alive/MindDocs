########################  ðŸ”§  BUILD STAGE  ###################################
FROM node:18-alpine AS build
WORKDIR /app

# â”€â”€ 1ï¸âƒ£  Speed up & cache npm installs â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
RUN --mount=type=cache,target=/root/.npm \
    npm config set fetch-retries 5                 && \
    npm config set fetch-retry-mintimeout 20000    && \
    npm config set fetch-retry-maxtimeout 90000

# â”€â”€ 2ï¸âƒ£  Install dependencies reproducibly ---------------------------------
# Copy ONLY the React projectâ€™s package.json + lockfile first (best cache hit)
COPY frontend/package*.json ./
RUN --mount=type=cache,target=/root/.npm \
    npm ci --legacy-peer-deps

# â”€â”€ 3ï¸âƒ£  Copy project source and build --------------------------------------
COPY frontend/ .
RUN npm run build                     # CRA -> /app/build  (adjust for Vite/etc.)

########################  ðŸš€  RUNTIME STAGE  #################################
FROM node:18-alpine AS production
WORKDIR /app

# lightweight static-file server
RUN npm install -g serve

# copy the compiled bundle from the build stage
COPY --from=build /app/build ./build   # change buildâ†’dist if you switch to Vite

EXPOSE 3000
CMD ["serve", "-s", "build", "-l", "3000"]
